extends layout.pug

block content 
  article.grid-container.portfolio-intro
    div

      h1 My Portfolio

      p.lead.text-light
        | Hello Prosepective employer! Here is a list of all my projects that have been completed thus far. Click a project for more details.
  article.grid-container.portfolio-index
    //-this code creates each project picture
    .grid-x.grid-margin-x.small-up-2.medium-up-2.large-up-3
      each item in data.projects 
        .cell
          a(href='project/' + item.id)
            img.thumbnail(src='/static2/' + item.image_urls[0].landing)
            h5= item.project_name